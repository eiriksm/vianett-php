{
  "name": "zaporylie/vianett",
  "type": "library",
  "description": "PHP API wrapper for Vianett SMS gateway",
  "keywords": ["sms", "api"],
  "license": "MIT",
  "homepage": "https://github.com/zaporylie/vianett-php",
  "authors": [
    {
      "name": "Jakub Piasecki",
      "email": "jakub@piaseccy.pl",
      "homepage": "http://jakub.piaseccy.pl"
    }
  ],
  "require": {
    "php": "^5.4 || ^7.0",
    "psr/http-message": "^1.0",
    "php-http/httplug": "^1.0",
    "php-http/client-implementation": "^1.0",
    "php-http/discovery": "^1.0"
  },
  "require-dev": {
    "php-http/guzzle6-adapter": "^1.0",
    "php-http/message": "^1.0",
    "phpunit/phpunit": "^5.0",
    "jakub-onderka/php-parallel-lint": "0.9",
    "satooshi/php-coveralls": "dev-master",
    "mockery/mockery": "^0.9.9"
  },
  "scripts": {
    "test": [
      "composer test-style",
      "composer exec -- phpunit -v"
    ],
    "test-style": "composer exec -- phpcs -p -v",
    "fix-style": "composer exec -- phpcbf -p -v"
  },
  "autoload": {
    "psr-4": {
      "zaporylie\\Vianett\\": "src/Vianett"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "zaporylie\\Vianett\\Test\\": "tests/src"
    }
  }
}
