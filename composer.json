{
  "name": "zaporylie/vianett",
  "type": "library",
  "description": "API client library for the Vianett sms as a service platform",
  "keywords": ["sms", "api"],
  "license": "GPL-2.0+",
  "homepage": "https://github.com/zaporylie/vianett-php",
  "authors": [
    {
      "name": "Jakub Piasecki",
      "email": "jakub@piaseccy.pl",
      "homepage": "http://jakub.piaseccy.pl"
    }
  ],
  "require": {
    "php": "^5.4 || ^7.0",
    "psr/http-message": "^1.0",
    "php-http/httplug": "^1.0",
    "php-http/client-implementation": "^1.0",
    "php-http/discovery": "^1.0"
  },
  "require-dev": {
    "php-http/guzzle6-adapter": "^1.0",
    "php-http/message": "^1.0",
    "symfony/yaml": "^2.0",
    "symfony/filesystem": "^3.1",
    "phpunit/phpunit": "^5.0",
    "jakub-onderka/php-parallel-lint": "0.9",
    "satooshi/php-coveralls": "dev-master"
  },
  "scripts": {
    "test": [
      "parallel-lint . --exclude vendor",
      "phpunit"
    ]
  },
  "autoload": {
    "psr-4": {
      "zaporylie\\Vianett\\": "src"
    }
  }
}
